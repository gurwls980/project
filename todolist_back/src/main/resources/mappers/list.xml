<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.toyproject.todolist.repository.InputMapper">

    <insert id="save" parameterType="com.toyproject.todolist.entity.TodoList">
        insert into todolist_tb
        values
            (0, #{check}, #{input}, #{registerDate})
    </insert>
    <update id="update" parameterType="com.toyproject.todolist.entity.TodoList">
        update todolist_tb
        set
            check = #{check},
            input = #{input},
            registerDate = #{registerDate}
        where
            listId = #{listId}

    </update>
    <delete id="delete" parameterType="com.toyproject.todolist.entity.TodoList">
        delete
        from
            todolist_tb
        where
            listId = #{listId}

    </delete>
    <select id="findByTodoListAll"
            parameterType="com.toyproject.todolist.entity.TodoList"
            resultType="com.toyproject.todolist.entity.TodoList">

        select
            listId,
            check,
            input,
            registerDate
        from
            todolist_tb
    </select>
    <select id="findByTodoListChecked"
            parameterType="com.toyproject.todolist.entity.TodoList"
            resultType="com.toyproject.todolist.entity.TodoList">
        select
            listId,
            check,
            input,
            registerDate
        from
            todolist_tb
        where
            check = #{check}
    </select>
</mapper>